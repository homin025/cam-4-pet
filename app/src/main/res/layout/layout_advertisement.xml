<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#00000000">


    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        app:scale_base_height="500"
        app:scale_base_width="1000"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/ad_imageView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_ad_imageview"
            android:padding="5dp"
            app:scale_width="260"
            app:scale_height="360"
            app:scale_left="720"
            app:scale_top="10"
            />

        <TextView
            android:id="@+id/ad_textView"
            android:layout_width="110dp"
            android:layout_height="162dp"
            android:background="@drawable/bg_ad_textview"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:scale_height="100"
            app:scale_left="720"
            app:scale_textsize="30"
            app:scale_top="370"
            app:scale_width="260" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:scale_base_height="330"
        app:scale_base_width="1000"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:background="#FFDFBC"
            app:scale_height="330"
            app:scale_width="1000" />

        <TextView
            android:id="@+id/toastView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_toast"
            android:padding="10dp"
            android:text="반려동물을 인식 중입니다."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:scale_height="120"
            app:scale_left="165"
            app:scale_textsize="45"
            app:scale_top="80"
            app:scale_width="690" />

        <ImageButton
            android:id="@+id/btn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_dog_bowl"
            app:scale_height="240"
            app:scale_left="80"
            app:scale_width="190"
            app:scale_top="40"
            />

        <ImageButton
            android:id="@+id/btn02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_dog_snack"
            app:scale_height="240"
            app:scale_left="320"
            app:scale_top="40"
            app:scale_width="190" />

        <ImageButton
            android:id="@+id/btn03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@drawable/bg_button_1"
            android:src="@drawable/img_dog_toy"
            app:scale_height="240"
            app:scale_left="550"
            app:scale_width="190"
            app:scale_top="40"/>

        <ImageButton
            android:id="@+id/btnReset"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_button_1"
            android:scaleType="fitCenter"
            app:scale_height="100"
            app:scale_left="770"
            app:scale_top="180"
            app:scale_width="190" />

        <ImageView
            android:id="@+id/ic_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_height="130"
            app:scale_left="765"
            app:scale_width="190"
            app:scale_top="40"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_dog"
            android:background="@drawable/bg_icon"
            >
        </ImageView>


        <ImageView
            android:id="@+id/img_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_reset"
            app:scale_height="100"
            app:scale_left="765"
            app:scale_top="175"
            app:scale_width="190"
            >
        </ImageView>

<!--        <ImageButton-->
<!--            android:id="@+id/btnBack"-->
<!--            android:layout_width="28dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/bg_button_1"-->
<!--            android:scaleType="centerInside"-->
<!--            android:src="@drawable/ic_back"-->
<!--            app:scale_height="220"-->
<!--            app:scale_left="880"-->
<!--            app:scale_top="50"-->
<!--            app:scale_width="100" />-->

    </com.ssomai.android.scalablelayout.ScalableLayout>

</RelativeLayout>