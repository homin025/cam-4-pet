<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- BUTTON alttan gÃ¶lge
              android:right="5px" to make it round-->
            <item>
                <shape>
                    <solid android:color="#F8EFD4"/>
                    <stroke android:color="#ffffff"
                        android:width="1dp"/>

                    <corners
                        android:radius="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- BUTTON -->
            <item>
                <shape>
                    <solid android:color="#c7bfa9"/>
                    <stroke android:color="#ffffff"
                        android:width="1dp"/>
                    <corners
                        android:radius="10dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>